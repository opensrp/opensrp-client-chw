<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.smartregister.brac.hnpp">

    <application
        android:name="org.smartregister.brac.hnpp.HnppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/HNPPTheme">

        <activity
            android:name="org.smartregister.brac.hnpp.activity.LoginActivity"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.Login"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.smartregister.family.activity.FamilyWizardFormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FamilyTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />

        <activity
            android:name="org.smartregister.brac.hnpp.activity.FamilyRegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.NoActionBar" />
        <activity
            android:name="org.smartregister.brac.hnpp.activity.FamilyProfileActivity"
            android:label="@string/title_family_detail"
            android:parentActivityName="org.smartregister.brac.hnpp.activity.FamilyRegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.smartregister.brac.hnpp.activity.FamilyRegisterActivity" />
        </activity>

        <activity
            android:name="org.smartregister.brac.hnpp.activity.HnppFamilyOtherMemberProfileActivity"
            android:label="@string/title_family_detail"
            android:parentActivityName="org.smartregister.brac.hnpp.activity.FamilyRegisterActivity"
            android:theme="@style/FamilyTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.smartregister.brac.hnpp.activity.FamilyProfileActivity" />
        </activity>

        <activity
            android:name="org.smartregister.brac.hnpp.activity.ChildRegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.NoActionBar" />
        <activity
            android:name="org.smartregister.brac.hnpp.activity.AncMedicalHistoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.NoActionBar" />

        <activity
            android:name="org.smartregister.brac.hnpp.activity.ChildHomeVisitActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.NoActionBar" />

        <activity
            android:name="org.smartregister.brac.hnpp.activity.HnppChildProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.NoActionBar" />

        <activity
            android:name="org.smartregister.brac.hnpp.activity.FamilyRemoveMemberActivity"
            android:theme="@style/HNPPTheme.NoActionBar" />

        <activity
            android:name="org.smartregister.brac.hnpp.activity.FamilyProfileMenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.NoActionBar" />
        <activity
            android:name="org.smartregister.chw.core.activity.CoreChildMedicalHistoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.NoActionBar" />
        <activity
            android:name="org.smartregister.brac.hnpp.activity.ReferralRegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.NoActionBar" />
        <activity
            android:name="org.smartregister.brac.hnpp.activity.ReferralTaskViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.NoActionBar" />
        <activity
            android:name="org.smartregister.brac.hnpp.activity.AncRegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.NoActionBar" />
        <activity
            android:name="org.smartregister.brac.hnpp.activity.AncMemberProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.NoActionBar" />

        <activity
            android:name="org.smartregister.chw.core.activity.CoreAncMemberProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.NoActionBar" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="3f94f9c3caeff331b3a2bd8c2182b663ad6a955a" />
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/captured_images_path" />
        </provider>

        <activity
            android:name="org.smartregister.brac.hnpp.activity.AboveFiveChildProfileActivity"
            android:label="@string/child_details"
            android:theme="@style/HNPPTheme.NoActionBar" />


        <activity android:name="org.smartregister.chw.core.activity.ChwP2pModeSelectActivity" />
        <activity android:name=".activity.HNPPJsonFormActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/FamilyTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>
        <activity android:name=".activity.HNPPMemberJsonFormActivity" android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/FamilyTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>
        <activity android:name=".activity.HnppCoreChildProfileActivity" />

        <activity
            android:name=".activity.HnppAllMemberRegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HNPPTheme.NoActionBar" />
        <service android:name="org.smartregister.immunization.service.intent.VaccineIntentService" />
        <service android:name="org.smartregister.immunization.service.intent.RecurringIntentService" />
        <service android:name="org.smartregister.sync.intent.PullUniqueIdsIntentService" />
        <service android:name="org.smartregister.sync.intent.SyncIntentService" />
        <service android:name="org.smartregister.sync.intent.ExtendedSyncIntentService" />
        <service android:name="org.smartregister.sync.intent.ValidateIntentService" />
        <service android:name="org.smartregister.service.ImageUploadSyncService" />
        <service android:name="org.smartregister.chw.anc.intent.HomeVisitIntent" />
        <service android:name="org.smartregister.sync.intent.LocationIntentService" />
        <service android:name="org.smartregister.brac.hnpp.sync.intent.HfSyncTaskIntentService" />
        <service android:name="org.smartregister.sync.intent.PlanIntentService" />
        <service android:name="org.smartregister.brac.hnpp.sync.intent.PullHouseholdIdIntentService"/>
        <service android:name=".service.SSLocationFetchIntentService" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

    </application>

    <uses-feature android:name="android.hardware.camera" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-permission android:name="android.permission.CALL_PHONE" />

</manifest>