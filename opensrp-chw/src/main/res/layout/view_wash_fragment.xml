<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/textview_handwashing_facilities"
                    style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:text="@string/handwashing_facilities"
                    android:textColor="@color/text_black"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/radio_group_handwashing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp">

                    <RadioButton
                        android:id="@+id/choice_1_handwashing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:padding="10dp"
                        android:text="@string/yes"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/register_list_desc_size" />

                    <RadioButton
                        android:id="@+id/choice_2_handwashing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:padding="10dp"
                        android:text="@string/no"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/register_list_desc_size" />\
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/textview_drinking_water"
                    style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:text="@string/drinking_water"
                    android:textColor="@color/text_black"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/radio_group_drinking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp">

                    <RadioButton
                        android:id="@+id/choice_1_drinking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:padding="10dp"
                        android:text="@string/yes"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/register_list_desc_size" />

                    <RadioButton
                        android:id="@+id/choice_2_drinking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:padding="10dp"
                        android:text="@string/no"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/register_list_desc_size" />\
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/textview_hygienic_latrine"
                    style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:text="@string/hygienic_latrine"
                    android:textColor="@color/text_black"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/radio_group_latrine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp">

                    <RadioButton
                        android:id="@+id/choice_1_latrine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:padding="10dp"
                        android:text="@string/yes"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/register_list_desc_size" />

                    <RadioButton
                        android:id="@+id/choice_2_latrine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:padding="10dp"
                        android:text="@string/no"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/register_list_desc_size" />\
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
