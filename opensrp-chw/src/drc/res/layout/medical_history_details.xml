                    android:paddingLeft="20dp">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutPncHealthFacilityVisit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
