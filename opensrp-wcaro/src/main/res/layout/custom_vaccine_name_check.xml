<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.vijay.jsonwizard.customviews.CheckBox
        android:id="@+id/select"
        style="@style/Material.Drawable.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="3dp"
        android:checked="true"
        android:clickable="true"
        android:scaleX="0.7"
        android:scaleY="0.7" />
    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/vaccine"
        style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/no_vaccines_were_done"
        android:textColor="@color/text_black"
        android:textSize="@dimen/vaccine_text_size"
        android:paddingLeft="0dp" />
</LinearLayout>